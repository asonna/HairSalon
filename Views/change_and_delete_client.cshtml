<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pick a styalist</title>
    <link rel="stylesheet" href="https://bootswatch.com/readable/bootstrap.min.css" >
    <link rel="stylesheet" href="../Content/css/styles.css" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <!--http://dev.vast.com/jquery-popup-overlay/-->
    <script src="https://cdn.rawgit.com/vast-engineering/jquery-popup-overlay/1.7.13/jquery.popupoverlay.js"></script>
    <script src=../Content/js/scripts.js></script>
  </head>

  <body>
    <h1>@Model.GetName()</h1>

    <form class="form-inline" action="/edit/@Model.GetId()" method="post">
      <input type="hidden" name="_method" value="PATCH">
      <input name="stylist_id" type="hidden" value="@Model.GetId()">
      <div class="form-group">
        <input type="text" class="form-control" name="new_stylist_name" placeholder="Change Name">
      </div>
      <button class="btn btn-info" type="submit">Submit</button>
    </form>
    <form class="form-inline" action="/clients/edit/@Model.GetId()" method="post">
      <input type="hidden" name="_method" value="DELETE">
      <button class="btn btn-info" type="submit">Delete Client</button>
    </form>
    <input type="button" class="btn btn-info" onclick="location.href='/';" value="Back" />
  </body>
</html>
