<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Clients</title>
    <link rel="stylesheet" href="https://bootswatch.com/readable/bootstrap.min.css" >
    <link rel="stylesheet" href="../Content/css/styles.css" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <!--http://dev.vast.com/jquery-popup-overlay/-->
    <script src="https://cdn.rawgit.com/vast-engineering/jquery-popup-overlay/1.7.13/jquery.popupoverlay.js"></script>
    <script src=../Content/js/scripts.js></script>
  </head>

  <body>
    <section class="module parallax parallax-1">
      <div class="container">
        <h1 id="brand">Seattle Hair</h1>
      </div>
    </section>
    <section class="module content">
      <div class="container section-container">
        <div class="city-output">
          <h1>@Model["stylist"].GetName()'s current clients</h1>
          <p>
            @foreach (var client in @Model["clients"])
            {
            <h4>@client.GetName()<small> <a href="/clients/edit/@client.GetId()">edit</a></small></h4>
            }
          </p>
        </div>
        <input type="button" class="btn btn-default spaceSmall" onclick="location.href='/';" value="Back" />
        <div class="spaceSmall"></div>
      </div>
    </section>
    <section class="module parallax parallax-1">
      <div class="container">
        <h1 id="brand"></h1>
      </div>
    </section>
    <section class="module content ">
      <div class="container section-container">
        <div class="city-output cuisine">
          <h1>Add Client</h1>
          <form class="form-inline" action="/clients/add_client" method="post">
            <div class="form-group">
              <input type="text" class="form-control" name="new_client" placeholder="Add a new stylist">
              <input type="hidden" name="stylist_id" value='@Model["stylist"].GetId()'>
            </div>
            <button class="btn btn-default" type="submit">Submit</button>
          </form>
        </div>
      </div>
    </section>
    <div class="well well-lg">
      <p class="text-center">&copy;Jonathan Buchner</p>
    </div>
  </body>
</html>
